---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site } from '../data/site';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title={site.title} description={site.description}>
  <section class="container hero">
    <div>
      <span class="tagline">{site.description}</span>
      <h1>Daily signal for crypto builders and modern technologists.</h1>
      <p>
        Curated by {site.author}, an {site.role.toLowerCase()}. Each digest captures
        what matters across Web3, DeFi, AI tooling, and emerging developer ecosystems.
      </p>
    </div>
    <div class="hero-card">
      <div class="tagline">Latest digest</div>
      {posts.length ? (
        <>
          <h2>{posts[0].data.title}</h2>
          <p>
            {posts[0].data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </p>
          {posts[0].data.description && <p>{posts[0].data.description}</p>}
          <a href={`${baseUrl}/${posts[0].slug}`}>
            Read the latest digest
          </a>
        </>
      ) : (
        <>
          <h2>No digests yet</h2>
          <p>
            New updates land daily. Check back soon for the latest signal across
            crypto, DeFi, AI tooling, and dev infrastructure.
          </p>
        </>
      )}
      <div class="badges">
        <span class="badge">Crypto</span>
        <span class="badge">DeFi</span>
        <span class="badge">Dev Tools</span>
        <span class="badge">AI</span>
        <span class="badge">Tech Trends</span>
      </div>
    </div>
  </section>

  <section class="container">
    <h2 class="section-title">Latest digests</h2>
    {posts.length ? (
      <div class="post-grid">
        {posts.map((post) => (
          <article class="post-card">
            <div class="post-meta">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </div>
            <a href={`${baseUrl}/${post.slug}`}>
              <h3>{post.data.title}</h3>
            </a>
            {post.data.description && <p>{post.data.description}</p>}
            {!!post.data.tags?.length && (
              <div class="badges">
                {post.data.tags.map((tag) => (
                  <span class="badge">{tag}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        No digests yet. Add your first daily file in <code>src/content/blog/</code>
        with frontmatter fields: title, pubDate, tags, description.
      </div>
    )}
  </section>
</BaseLayout>
